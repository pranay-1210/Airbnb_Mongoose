<%- include('../partials/head') %>

</head>
<body class="bg-gradient-to-br from-gray-50 to-gray-100 min-h-screen">
<%- include('../partials/nav') %>

  <main class="py-4 px-4">
  <div class="flex flex-col items-center justify-center min-h-screen px-4">
    <div class="text-center">
      <h1 class="text-blue-600 text-3xl font-bold mb-4">Welcome to Our Airbnb</h1>
      <p class="text-md text-gray-600 mb-12">Discover and manage beautiful homes in one place</p>
      
      <ul class="mt-8 flex flex-wrap gap-6 justify-center w-full max-w-6xl">
        <% homes.forEach(home => { %>
          <li class="bg-white rounded-lg shadow-lg hover:shadow-2xl transition-all duration-300 w-full sm:w-80 transform hover:scale-105">
            <img src="<%= home.photoUrl %>" alt="<%= home.houseName %>" class="w-full h-48 object-cover rounded-t-lg">
            <div class="p-4">
              <h2 class="text-lg font-semibold text-gray-800 mb-2"><%= home.houseName %></h2>
              <p class="text-sm font-bold text-gray-600 mb-3"><%= home.location %></p>
              <div class="flex justify-between items-center">
                <span class="text-xl font-bold text-blue-600">Rs.<%= home.price %></span>
                <span class="bg-yellow-100 text-yellow-800 text-sm font-semibold px-3 py-1 rounded">‚≠ê <%= home.rating %></span>
              </div>
            </div>
          </li>
        <% }); %>
      </ul>
    </div>
  </div>
  </main>
</body>
</html>